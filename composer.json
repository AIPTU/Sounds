{
    "name": "aiptu/sounds",
    "description": "A library for managing and manipulating sound files in PHP.",
    "license": "MIT",
    "type": "library",
    "require": {
        "pocketmine/pocketmine-mp": "^5.15"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "extra": {
        "virion": {
            "spec": "3.0",
            "namespace-root": "aiptu\\sounds"
        }
    },
    "scripts": {
        "generate_sounds": [
            "curl https://github.com/Mojang/bedrock-samples/archive/refs/tags/v1.20.80.5.zip -L > bedrock-samples.zip",
            "php tools/generate_sounds.php"
        ]
    }
}
